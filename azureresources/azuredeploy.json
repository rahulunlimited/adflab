{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "project-prefix": {
            "type": "string",
            "defaultValue": "vladf01"
        },
        "adf-database-name": {
            "type": "string",
            "defaultValue": "adflab"
        },
        "directory-id": {
            "type": "string",
            "defaultValue": "3db0dd8c-ea66-4493-81cc-74962d452386"
        },
        "sqlserverAdminLogin": {
            "type": "string",
            "defaultValue": "veladmin"
        },
        "sqlserverAdminPassword": {
            "type": "securestring"
        },
        "onpremSourceServer": {
            "type": "string",
            "defaultValue": "WSLVEL155"
        },
        "onpremSourceDatabase": {
            "type": "string",
            "defaultValue": "AdventureWorks2014"
        },
        "onpremSourceUserID": {
            "type": "string",
            "defaultValue": "dbadmin"
        },
        "onpremSourcePassword": {
            "type": "securestring"
        },

        "db-masterCollation": {
            "type": "string",
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "db-masterEdition": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "db-masterServiceObjectiveName": {
            "type": "string",
            "defaultValue": "S0",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "P1",
                "P2",
                "P3"
            ],
            "metadata": {
                "description": "Describes the performance level for Edition"
            }
        }
    },

    "variables": {
        "image": "microsoft/azure-cli",
        "userminame": "[concat(parameters('project-prefix'), 'umi')]",
        "datalakename": "[concat(parameters('project-prefix'), 'datalake')]",
        "adfkeyVaultName": "[concat(parameters('project-prefix'),'kv')]",
        "adfstorageName": "[concat(parameters('project-prefix'),'storage')]",
        "adfsqlserverName": "[concat(parameters('project-prefix'),'sql')]",
        "adfDataFactoryName": "[concat(parameters('project-prefix'),'adf')]",
        "hostingPlanName": "[concat(parameters('project-prefix'),'hostingplan')]",
        "functionAppName": "[concat(parameters('project-prefix'),'fnapp')]",
        "dbWorkspaceName": "[concat(parameters('project-prefix'),'databricks')]",
        "containerInstanceName": "[concat(parameters('project-prefix'),'-containerinstance')]",
        "managedResourceGroupName": "[concat('databricks-rg-', parameters('project-prefix'), '-', uniqueString(parameters('project-prefix'), resourceGroup().id))]",
        "onpremconnstr": "[concat('integrated security=False;data source=',parameters('onpremSourceServer'), ';initial catalog=', parameters('onpremSourceDatabase'), ';user id=', parameters('onpremSourceUserID'), ';password=', parameters('onpremSourcePassword'))]"

    },


    "resources": [

        {
            "name": "[variables('adfsqlserverName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [],
            "tags": {
                "displayName": "adfsqlserver"
            },
            "properties": {
                "administratorLogin": "[parameters('sqlserverAdminLogin')]",
                "administratorLoginPassword": "[parameters('sqlserverAdminPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', variables('adfsqlserverName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                },
                {
                    "name": "[parameters('adf-database-name')]",
                    "type": "databases",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', variables('adfsqlserverName'))]"
                    ],
                    "tags": {
                        "displayName": "adf-master"
                    },
                    "properties": {
                        "collation": "[parameters('db-masterCollation')]",
                        "edition": "[parameters('db-masterEdition')]",
                        "maxSizeBytes": "1073741824",
                        "requestedServiceObjectiveName": "[parameters('db-masterServiceObjectiveName')]"
                    }
                }
            ]
        },

        {
            "name": "[variables('userminame')]",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "apiVersion": "2018-11-30",
            "location": "[resourceGroup().location]"
        },

        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('adfkeyVaultName')]",
            "apiVersion": "2018-02-14",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                ]
            }
        },

        {
            "name": "[variables('adfDataFactoryName')]",
            "type": "Microsoft.DataFactory/factories",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "identity": {
                "type": "systemAssigned"
            },
            "resources": []
        },


        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "name": "[variables('datalakename')]",
            "apiVersion": "2018-07-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "Development",
                "DisplayName": "DataLake"
            },
            "scale": null,
            "properties": {
                "isHnsEnabled": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }

        },



        {
            "name": "[variables('adfstorageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2018-07-01",
            "sku": {
                "name": "Standard_LRS"
            },
            "dependsOn": [],
            "tags": {
                "displayName": "adfstorage"
            },
            "kind": "StorageV2",
            "resources": [
                {
                    "name": "default/sqldb",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-07-01",
                    "properties": {
                        "publicAccess": "BLOB",
                        "metadata": {}
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('adfstorageName'))]"
                    ]
                }
            ]
        },

        {
            "name": "[variables('containerInstanceName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('adfstorageName'))]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "createshare",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "create",
                                "--name",
                                "fshare"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('adfstorageName'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('adfstorageName')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "1.0",
                                    "memoryInGb": "1.0"
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        },

        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[variables('hostingPlanName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            }
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'blob-connection-string')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[concat('DefaultEndpointsProtocol=https;', 'AccountName=', variables('adfstorageName'), ';', 'AccountKey=' , listKeys(resourceId('Microsoft.Storage/storageAccounts',variables('adfstorageName')), '2018-07-01').keys[0].value, ';', 'EndpointSuffix=core.windows.net')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('adfstorageName'))]"
            ]
        },



        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',variables('userminame'))]": {}
                }

            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('adfstorageName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('adfstorageName'), ';AccountKey=', listKeys(variables('adfstorageName'),'2017-10-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('adfstorageName'), ';AccountKey=', listKeys(variables('adfstorageName'),'2017-10-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('adfstorageName'), ';AccountKey=', listKeys(variables('adfstorageName'),'2017-10-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "FileShare",
                            "value": "fshare"
                        },
                        {
                            "name": "StorageConnectionString",
                            "value": "[concat('@Microsoft.KeyVault(SecretUri=', reference(resourceId('Microsoft.KeyVault/vaults/secrets', variables('adfkeyVaultName'), 'blob-connection-string')).secretUriWithVersion, ')')]"
                        }
                    ]
                }
            }
        },


        {
            "type": "Microsoft.Databricks/workspaces",
            "name": "[variables('dbWorkspaceName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2018-04-01",
            "sku": {
                "name": "standard"
            },
            "properties": {
                "ManagedResourceGroupId": "[concat(subscription().id, '/resourceGroups/', variables('managedResourceGroupName'))]"
            }
        },



        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-adflab-password')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[parameters('sqlserverAdminPassword')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-adflab-username')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[parameters('sqlserverAdminLogin')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-source-onprem-pwd')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[parameters('onpremSourcePassword')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'directory-id')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[parameters('directory-id')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'azurefunction-fileservice-key')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": ""
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]",
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'databricks-token')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": ""
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-source-azure-connstr')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[concat('Integrated Security=False;Encrypt=True;Connection Timeout=30;', 'Data Source=', variables('adfsqlserverName'), '.database.windows.net;', 'Initial Catalog=WideWorldImporters;', 'User ID=', parameters('sqlserverAdminLogin'), ';Password=', parameters('sqlserverAdminPassword'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'app-adflab-id')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": ""
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'app-adflab-secret')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": ""
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-source-onprem-connstr')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[variables('onpremconnstr')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]"
            ]
        },



        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'datalake-storage-key')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts',variables('datalakename')), '2018-07-01').keys[0].value]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('datalakename'))]"
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'blob-storage-key')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts',variables('adfstorageName')), '2018-07-01').keys[0].value]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('adfstorageName'))]"
            ]
        },

        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('adfkeyVaultName'), '/', 'db-adflab-connstr')]",
            "apiVersion": "2015-06-01",
            "properties": {
                "contentType": "text/plain",
                "value": "[concat('Integrated Security=False;Encrypt=True;Connection Timeout=30;', 'Data Source=', variables('adfsqlserverName'), '.database.windows.net;', 'Initial Catalog=' , parameters('adf-database-name'), ';', 'User ID=', parameters('sqlserverAdminLogin'), ';Password=', parameters('sqlserverAdminPassword'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('adfkeyVaultName'))]",
                "[resourceId('Microsoft.Sql/servers', variables('adfsqlserverName'))]"
            ]
        }


    ],
    "outputs": {
    }
}
